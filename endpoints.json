  "GET /api/articles/article_id/comments": {
    "description": "serves an array containing objects for each comment related to the given article_id",
    "queries": ["author", "topic"],
    "exampleResponse": {
      "article_id": 1,
      "title": "Living in the shadow of a great man",
      "topic": "mitch",
